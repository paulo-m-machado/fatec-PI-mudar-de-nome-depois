@{
    ViewData["Title"] = "Agenda";
}

<link rel="stylesheet" href="~/css/BaseNavegacao.css" />
<link rel="stylesheet" href="~/css/AreaConteudoMain.css" />
<link rel="stylesheet" href="~/css/Agenda.css" />

<div class="main-container">
  @await Html.PartialAsync("_Navbar")

  <main class="content-area">
    <section class="agenda-controls">
      <div class="controls-left">
        <button id="btnPrev" class="btn-secondary">Anterior</button>
        <button id="btnToday" class="btn-ghost">Hoje</button>
        <button id="btnNext" class="btn-secondary">Próxima</button>
        <span id="weekLabel" class="week-label"></span>
      </div>
      <div class="controls-right">
        <label>Tipo
          <select id="filterTipo">
            <option>Todos</option>
            <option>Avaliação</option>
            <option>Consulta</option>
            <option>Retorno</option>
          </select>
        </label>
      </div>
    </section>

    <section class="agenda-grid-wrap">
      <div class="table-wrap">
        <table id="agendaGrid">
          <thead>
            <tr id="agendaHeaderRow">
              <th class="times-col">Horários</th>
              <th>Seg</th>
              <th>Ter</th>
              <th>Qua</th>
              <th>Qui</th>
              <th>Sex</th>
              <th>Sáb</th>
              <th>Dom</th>
            </tr>
          </thead>
          <tbody id="agendaBody"></tbody>
        </table>
      </div>
    </section>

    <div style="margin-top:14px">
      <a class="btn-primary" asp-controller="Agenda" asp-action="Create">Agendar</a>
    </div>
  </main>
</div>

<script src="~/js/agenda-view.js"></script>
